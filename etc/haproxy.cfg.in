global
        log 127.0.0.1 local0
        user nobody
        group nobody
        daemon
        maxconn 65535
        pidfile /var/run/haproxy.pid
        stats socket /tmp/haproxy.sock

defaults
        mode    tcp
        balance leastconn
        maxconn 65535
        option redispatch
        option abortonclose
        retries 1
        timeout queue   0
        timeout connect 500
# See MANTA-1439
#        timeout client 4000
#        timeout server 4000

frontend http_trusted
        bind *:80
        default_backend trusted_servers

frontend http_insecure
        bind *:81
        default_backend insecure_servers

backend trusted_servers
@@BUCKETS_API_INSTANCES@@

backend insecure_servers
@@BUCKETS_API_INSECURE_INSTANCES@@
